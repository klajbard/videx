{
  "name": "videx",
  "version": "0.0.1",
  "description": "Video library dashboard",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prisma:generate": "npx prisma generate",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:dev:migrate": "DATABASE_URL='file:databases/dev.db' npx prisma migrate dev",
    "dev:server": "tsx --tsconfig server/tsconfig.json server/src/index.ts",
    "dev:client": "vite",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "tsc --noEmit -p client/",
    "typecheck:server": "tsc --noEmit -p server/",
    "check": "biome check ./client ./shared ./server ./prisma",
    "format": "biome check ./client ./shared ./server ./prisma *.ts biome.json package.json --fix --unsafe",
    "test": "npm run test:server && npm run test:client",
    "test:server": "vitest run --config vitest.server.config.ts",
    "test:client": "vitest run --config vitest.client.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@prisma/client": "^6.13.0",
    "@tanstack/react-query": "^5.84.1",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@faker-js/faker": "^9.9.0",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
